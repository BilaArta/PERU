{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function" : "app"
      },
      {
        "source" : "**",
        "function" : "sendEmail"
      },
      {
        "source" : "**",
        "function" : "sendmail"
      }
    ]
  }
}
